/* pages/home/home.wxss */

.container {
  padding: 0;
  width: 100%;
  float: left;
  background-color: white;
}

.header_image {
  margin-top: 10rpx;
  width: 100%;
  height: 880rpx;
}

.history_view {
  padding-left: 20rpx;
  font-size: 40rpx;
  color: red;
}

.home_list {
  display: flex;
  flex-direction: column;
}

.home_title {
  display: flex;
  width: 100%;
  height: 70rpx;
  line-height:70rpx;
  background-color: rgb(239, 239, 244);
  font-size: 40rpx;
  text-align: center;
  justify-content: center;
}

.item_cell {
  padding-left: 20rpx;
  padding-right: 20rpx;
  border: 1rpx solid gainsboro;
}

.cell_title {
  width: 100%;
  font-size: 32rpx;
  margin-top: 10rpx;
  line-height: 40rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
} 

.cell_content {
  margin-top: 10rpx;
  width: 100%;
  color: gray;
  font-size: 24rpx; 
}

.cell_info {
  margin-top: 10rpx;
  display: flex;
  width: 100%;
  height: 60rpx;
  flex-direction: row;
}

.info_type {
  width: 50%;
  font-size: 30rpx;
  color: gray;
}

.info_time {
  width: 50%;
  font-size: 24rpx;
  color: gray;
  text-align: right;
}