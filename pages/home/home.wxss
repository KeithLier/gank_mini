/* pages/home/home.wxss */

.container {
  padding: 0;
  width: 100%;
  float: left;
  background-color: white;
}

.header_image {
  margin-top: 10rpx;
  width: 100%;
  height: 880rpx;
}

.banner_swiper {
  width: 100%;
  background-color:white;
  justify-content: center;
  text-align: center;
}

.banner_image {
  width: 100%;
  height: 100%;
}

.history_view {
  padding-left: 20rpx;
  font-size: 40rpx;
  color: red;
}

.home_list {
  display: flex;
  flex-direction: column;
}

.home_title {
  display: flex;
  width: 100%;
  height: 70rpx;
  line-height:70rpx;
  background-color: rgb(239, 239, 244);
  font-size: 40rpx;
  text-align: center;
  justify-content: center;
}

.item_cell {
  padding-left: 20rpx;
  padding-right: 20rpx;
  border: 1rpx solid gainsboro;
}

.cell_title {
  width: 100%;
  font-size: 32rpx;
  margin-top: 10rpx;
  line-height: 40rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
} 

.cell_content {
  margin-top: 10rpx;
  width: 100%;
  color: gray;
  font-size: 24rpx; 
}

.cell_info {
  margin-top: 10rpx;
  display: flex;
  width: 100%;
  height: 60rpx;
  flex-direction: row;
}

.info_type {
  width: 50%;
  font-size: 30rpx;
  color: gray;
}

.info_time {
  width: 50%;
  font-size: 24rpx;
  color: gray;
  text-align: right;
}

/* 悬浮按钮 */
.float_view {
  right: 15px;
  bottom: 20px;
  width: 40px;
  height: 40px;
  border-radius: 50%;
  border: 0.5px solid rgb(222, 222, 222);
  background: white;
  opacity: 0.8;
  display: flex;
  text-align: center;
  justify-content: center;
  position: fixed;
}

.custom_view {
  padding-left: 4px;
  padding-right: 4px;
  line-height: 16px;
}

.float_text {
  display: inline-block;
  width: 100%;
  font-size: 12px;
  position: relative;
  top: 12px;

}