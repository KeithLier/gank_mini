.menu_item:active {
  background-color: #ececec;
}

.menu_icon {
  width: 50px;
  height: 50px;
  padding-bottom: 5px;
}

.menu_text {
  display: block;
  text-align: center;
  color: #000;
  font-size: 12px;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
